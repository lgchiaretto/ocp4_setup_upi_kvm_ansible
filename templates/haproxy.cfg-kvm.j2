global                                                                                    
  log 127.0.0.1 local2   
  chroot /var/lib/haproxy     
  pidfile /var/run/haproxy.pid
  maxconn 4000 
  user haproxy               
  group haproxy            
  daemon                             
  stats socket /var/lib/haproxy/stats                                 
                                                                      
defaults                                                
  mode tcp                                              
  log global                                            
  option tcplog                                                       
  option dontlognull                                                  
  option redispatch            
  option forwardfor 
  retries 3                  
  timeout queue 1m           
  timeout connect 10s
  timeout client 1m                                     
  timeout server 1m                                      
  timeout check 10s                                      
  maxconn 3000                                                                            

listen stats 
    bind :1936
    mode http
    stats enable
    stats hide-version
    stats refresh 30s
    stats show-node
    stats uri  /

# 6443 points to control plan
frontend {{ clustername }}-api 
  bind *:6443
  default_backend {{ clustername }}-master-api
backend {{ clustername }}-master-api
  balance source  
  server bootstrap {{ clustername }}-bootstrap.{{ basedomain }}:6443 check
  server master-0 {{ clustername }}-master-0.{{ basedomain }}:6443 check
  server master-1 {{ clustername }}-master-1.{{ basedomain }}:6443 check
  server master-2 {{ clustername }}-master-2.{{ basedomain }}:6443 check

# 22623 points to control plane
frontend {{  clustername }}-mapi 
  bind *:22623
  mode tcp
  default_backend {{ clustername }}-master-mapi
backend {{ clustername }}-master-mapi
  balance source
    server bootstrap {{ clustername }}-bootstrap.{{ basedomain }}:22623 check
    server master-0 {{ clustername }}-master-0.{{ basedomain }}:22623 check
    server master-1 {{ clustername }}-master-1.{{ basedomain }}:22623 check
    server master-2 {{ clustername }}-master-2.{{ basedomain }}:22623 check

# 80 points to master nodes
frontend {{  clustername }}-http 
  bind *:80
  default_backend {{ clustername }}-ingress-http
backend {{ clustername }}-ingress-http
  balance source
  server master-0 {{ clustername }}-master-0.{{ basedomain }}:80 check
  server master-1 {{ clustername }}-master-1.{{ basedomain }}:80 check
  server master-2 {{ clustername }}-master-2.{{ basedomain }}:80 check

# 443 points to master nodes
frontend {{ clustername }}-https
  bind *:443
  default_backend {{ clustername }}-infra-https
  option httplog
  option http-server-close
  option forwardfor

backend {{ clustername }}-infra-https
  balance source
  server master-0 {{ clustername }}-master-0.{{ basedomain }}:443 check
  server master-1 {{ clustername }}-master-1.{{ basedomain }}:443 check
  server master-2 {{ clustername }}-master-2.{{ basedomain }}:443 check
